<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xjinyao.xcloud.admin.mapper.SysOrganizationMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.xjinyao.xcloud.admin.api.entity.SysOrganization">
        <id column="id" property="id"/>
        <id column="enterprise_id" property="enterpriseId"/>
        <id column="name" property="name"/>
        <id column="full_name" property="fullName"/>
        <id column="`code`" property="code"/>
        <id column="sort" property="sort"/>
        <id column="del_flag" property="delFlag"/>
        <id column="parent_id" property="parentId"/>
        <id column="nature" property="nature"/>
        <id column="remark" property="remark"/>
        <id column="parent_id_path" property="parentIdPath"/>
        <id column="coordinates" property="coordinates"/>
        <id column="is_can_del" property="isCanDel"/>
        <id column="is_can_select" property="isCanSelect"/>
        <id column="create_time" property="createTime"/>
        <id column="update_time" property="updateTime"/>
    </resultMap>

    <select id="hasChildren" resultType="java.util.Map" parameterType="java.util.List">
        SELECT parent_id,COUNT(1) count FROM sys_organization
        WHERE parent_id IN
        <foreach collection="ids" item="id" open="(" close=")" separator=",">#{id}</foreach>
        GROUP BY parent_id
    </select>
</mapper>
