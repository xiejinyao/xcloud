        <artifactId>xcloud-auth</artifactId>
        <version>1.10.0</version>
    </parent>

    <artifactId>xcloud-auth-biz</artifactId>
    <packaging>jar</packaging>

    <description>认证授权中心，基于 spring security oAuth2</description>

    <dependencies>
